
<Page x:Class="EV03.Wpf.Views.ExcusasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Excusas">
  <ScrollViewer>
    <StackPanel Margin="24,16,24,16">
      <Border Style="{StaticResource Card}">
        <StackPanel>
          <TextBlock Text="Gestión de excusas" FontSize="20" FontWeight="Bold"/>
          <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,12,0">
              <TextBlock Text="Nombre"/>
              <TextBox/>
            </StackPanel>
            <Button Grid.Column="1" Content="Consultar" VerticalAlignment="Bottom"/>
          </Grid>

          <Border Style="{StaticResource Card}">
            <StackPanel>
              <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                  <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}"/>
                  <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}"/>
                  <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}"/>
                </DataGrid.Columns>
                <DataGrid.Items>
                  <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Fila de ejemplo</sys:String>
                </DataGrid.Items>
              </DataGrid>
              <Button Content="Añadir" Margin="0,12,0,0" HorizontalAlignment="Left"/>
            </StackPanel>
          </Border>
        </StackPanel>
      </Border>

      <Border Style="{StaticResource Card}">
        <StackPanel>
          <TextBlock Text="Gestión de excusas" FontSize="18" FontWeight="SemiBold"/>
          <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,12,8">
              <TextBlock Text="Fecha"/>
              <DatePicker/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0,0,0,8">
              <TextBlock Text="Tipo de excusa"/>
              <ComboBox><ComboBoxItem Content="Vacaciones"/></ComboBox>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,8">
              <TextBlock Text="Nombres"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,8">
              <TextBlock Text="Apellidos"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,8">
              <TextBlock Text="Jefe inmediato"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2">
              <TextBlock Text="Comentarios"/>
              <TextBox/>
            </StackPanel>
          </Grid>
          <Button Content="Añadir" Margin="0,12,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</Page>
