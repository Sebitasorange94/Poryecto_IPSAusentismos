
<Page x:Class="EV03.Wpf.Views.VacacionesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Vacaciones">
  <ScrollViewer>
    <StackPanel Margin="24,16,24,16">
      <Border Style="{StaticResource Card}">
        <StackPanel>
          <TextBlock Text="Gestionar vacaciones" FontSize="20" FontWeight="Bold"/>
          <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,12,8">
              <TextBlock Text="Fecha de inicio"/>
              <DatePicker/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0,0,0,8">
              <TextBlock Text="Fecha de finalización"/>
              <DatePicker/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,8">
              <TextBlock Text="Nombres"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,8">
              <TextBlock Text="Apellidos"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,8">
              <TextBlock Text="Jefe inmediato"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2">
              <TextBlock Text="Area"/>
              <TextBox/>
            </StackPanel>
          </Grid>
          <Button Content="Añadir" Margin="0,12,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</Page>
