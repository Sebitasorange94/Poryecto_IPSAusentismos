
<Window x:Class="EV03.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SGP – Sistema de Gestión de Personal" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
  <DockPanel>
    <Border Background="{StaticResource BrushPrimary}" DockPanel.Dock="Top" Padding="10,6">
      <TextBlock Text="Sistema de Gestión de Personal" Foreground="White" FontWeight="Bold"/>
    </Border>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="240"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Sidebar -->
      <Border Background="{StaticResource BrushBlueDark}">
        <StackPanel Margin="8">
          <Button Style="{StaticResource SidebarButtonActive}" Click="GoDashboard">
            <StackPanel Orientation="Horizontal">
              <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" Margin="0,0,8,0"/>
              <TextBlock Text="Dashboard"/>
            </StackPanel>
          </Button>
          <Button Style="{StaticResource SidebarButton}" Click="GoRegistrarEvento">
            <StackPanel Orientation="Horizontal">
              <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" Margin="0,0,8,0"/>
              <TextBlock Text="Registrar Evento"/>
            </StackPanel>
          </Button>
          <Button Style="{StaticResource SidebarButton}" Click="GoReportes">
            <StackPanel Orientation="Horizontal">
              <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9F9;" Margin="0,0,8,0"/>
              <TextBlock Text="Reportes"/>
            </StackPanel>
          </Button>
          <Button Style="{StaticResource SidebarButton}" Click="GoExcusas">
            <StackPanel Orientation="Horizontal">
              <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C7;" Margin="0,0,8,0"/>
              <TextBlock Text="Excusas"/>
            </StackPanel>
          </Button>
          <Button Style="{StaticResource SidebarButton}" Click="GoVacaciones">
            <StackPanel Orientation="Horizontal">
              <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE81E;" Margin="0,0,8,0"/>
              <TextBlock Text="Gestionar vacaciones"/>
            </StackPanel>
          </Button>
          <Button Style="{StaticResource SidebarButton}" Click="GoAdmin">
            <StackPanel Orientation="Horizontal">
              <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" Margin="0,0,8,0"/>
              <TextBlock Text="Admin"/>
            </StackPanel>
          </Button>
        </StackPanel>
      </Border>

      <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
  </DockPanel>
</Window>
