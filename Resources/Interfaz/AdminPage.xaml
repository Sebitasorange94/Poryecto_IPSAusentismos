
<Page x:Class="EV03.Wpf.Views.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin">
  <ScrollViewer>
    <StackPanel Margin="24,16,24,16">
      <Border Style="{StaticResource Card}">
        <StackPanel>
          <TextBlock Text="Administración" FontSize="20" FontWeight="Bold"/>
          <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,12,8">
              <TextBlock Text="Usuario"/>
              <TextBox/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0,0,0,8">
              <TextBlock Text="Contraseña"/>
              <StackPanel Orientation="Horizontal">
                <PasswordBox Width="200"/>
                <Button Content="Cambiar contraseña" Style="{StaticResource ButtonOutline}" Margin="8,0,0,0"/>
              </StackPanel>
            </StackPanel>
            <StackPanel Margin="0,0,12,8" Grid.ColumnSpan="2">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,0,12,0">
                  <TextBlock Text="Nombres"/>
                  <TextBox/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                  <TextBlock Text="Apellidos"/>
                  <TextBox/>
                </StackPanel>
              </Grid>
            </StackPanel>
          </Grid>
          <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
            <Button Content="Crear usuario" x:Name="BtnCreate"/>
            <Button Content="Modificar usuario" Style="{StaticResource ButtonOutline}" Margin="8,0,0,0" x:Name="BtnModify"/>
            <Button Content="Eliminar usuario" Style="{StaticResource ButtonOutline}" Margin="8,0,0,0"/>
          </StackPanel>
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</Page>
