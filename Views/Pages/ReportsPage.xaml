<Page x:Class="IpsAusentismos.Views.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
      <DatePicker x:Name="From"/>
      <DatePicker x:Name="To" Margin="10,0,0,0"/>
      <ComboBox x:Name="Type" Width="160" Margin="10,0,0,0">
        <ComboBoxItem Content="(Todos)"/>
        <ComboBoxItem Content="Ausentismo"/>
        <ComboBoxItem Content="Incapacidad"/>
        <ComboBoxItem Content="Permiso"/>
        <ComboBoxItem Content="Tarde"/>
      </ComboBox>
      <Button Content="Buscar" Margin="10,0" Click="Search_Click"/>
      <Button Content="Exportar CSV" Margin="10,0" Click="Export_Click"/>
    </StackPanel>

    <DataGrid x:Name="ReportsGrid" Grid.Row="1" AutoGenerateColumns="True"/>
  </Grid>
</Page>
