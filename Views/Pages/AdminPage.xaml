<Page x:Class="IpsAusentismos.Views.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal">
      <TextBox x:Name="UserBox"  Width="140"/>
      <PasswordBox x:Name="Pwd"  Width="140" Margin="10,0"/>
      <TextBox x:Name="NameBox"  Width="160"/>
      <TextBox x:Name="LastBox"  Width="160"/>
      <ComboBox x:Name="Role"    Width="120" Margin="10,0">
        <ComboBoxItem Content="Admin"/>
        <ComboBoxItem Content="RRHH"/>
        <ComboBoxItem Content="Empleado"/>
      </ComboBox>
      <Button Content="Crear" Margin="10,0" Click="Create_Click"/>
    </StackPanel>

    <DataGrid x:Name="UsersGrid" Grid.Row="1" AutoGenerateColumns="True"/>
  </Grid>
</Page>
